@{
    ViewData["Title"] = "Catalogo";
}

@model List<Produto>;

<h2>Catálogo</h2>

@foreach (var produto in Model)
{
<div class="card border-primary mb-3 d-inline-block" style="max-width: 20rem;">
    <div class="card-header">Imagem do produto</div>
    <div class="card-body">
        <h4 class="card-title">@produto.Nome</h4>
        <p class="card-text">@produto.Descricao</p>
        <button type="button" class="btn btn-dark">Comprar</button>
    </div>
</div>
}


